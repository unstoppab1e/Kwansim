<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="40dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".ui.myfish.FishDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_ic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/allower_black" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/common_title_style"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/day1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/some_id1"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="xxxx 등록" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textAppearance="@style/d_100"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="D+100"
                android:layout_margin="10dp"
                tools:ignore="RtlCompat" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textAppearance="@style/some_id2"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="어항"
                    android:layout_margin="10dp"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/group_1" />

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/some_id3"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="가로       30cm"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/some_id3"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="세로       30cm"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="@style/some_id3"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="물높이   30cm"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textAppearance="@style/some_id2"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="관상어"
                    android:layout_margin="10dp"
                    tools:ignore="RtlCompat" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/group_2" />

                <TextView
                    android:id="@+id/a4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="@style/some_id3"
                    android:fontFamily="@font/notosans_bold"
                    android:includeFontPadding="false"
                    android:text="소형어    30cm"
                    tools:ignore="RtlCompat" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textAppearance="@style/some_id2"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:text="알람"
            android:layout_margin="20dp"
            tools:ignore="RtlCompat" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_reminder_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.kr.kwansim.utiils.BottomNav
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:nav1="2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>