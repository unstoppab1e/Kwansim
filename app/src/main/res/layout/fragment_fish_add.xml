<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.myfish.fragment.FishAddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_ic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/allower_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:textAppearance="@style/common_title_style"
                android:text="어항 추가하기" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textAppearance="@style/fish_add_text_style"
            android:text="@string/fish_add_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/select_box_img"
                android:text="네, 처음이에요!️"
                android:textAppearance="@style/common_btn_text_style" />

            <View
                android:layout_width="30dp"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btn_add_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@drawable/select_box_img2"
                android:text="아니요, 계속 입력할게요."
                android:textAppearance="@style/common_btn_text_style" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textAppearance="@style/fish_add_text_style"
            android:text="어항의 이름을 입력해주세요" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <EditText
            android:id="@+id/edit_fish_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="어항 이름 입력"
            android:paddingStart="10dp"
            android:ems="10"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textColor="@null"
            android:textColorHint="@null"
            android:textAppearance="@style/fish_add_input_style"
            android:background="@drawable/btn_input"
            android:inputType="textPersonName"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fish_add_text_style"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="어항의 크기를 입력해주세요." />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="3"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/size_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_input"
                android:ems="10"
                android:hint="가로(cm)"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@null"
                android:textColorHint="@null"
                android:textAppearance="@style/fish_add_input_style" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />
            <EditText
                android:id="@+id/size_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="세로(cm)"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:textColor="@null"
                android:textColorHint="@null"
                android:textAppearance="@style/fish_add_input_style"
                android:ems="10"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/btn_input"
                android:inputType="number"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <EditText
                android:id="@+id/water_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="물 높이(cm)"
                android:textAlignment="center"
                android:textColor="@null"
                android:textColorHint="@null"
                android:textAppearance="@style/fish_add_input_style"
                android:ems="10"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:background="@drawable/btn_input"
                android:inputType="number"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fish_add_text_style"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="관상어의 크기를 입력해 주세요." />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <EditText
            android:id="@+id/edit_fish_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cm"
            android:paddingStart="10dp"
            android:textColor="@null"
            android:textColorHint="@null"
            android:textAppearance="@style/fish_add_input_style"
            android:ems="10"
            android:background="@drawable/btn_input"
            android:inputType="number"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fish_add_text_style"
            android:visibility="gone"
            android:text="알림시간을 설정해주세요." />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="3"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_time_setting"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:hint="시간"
                android:gravity="center_vertical"
                android:textColor="@null"
                android:textColorHint="@null"
                android:textAppearance="@style/fish_add_input_style"
                android:ems="10"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:background="@drawable/btn_input"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <ImageView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_al_1" />
            <View
                android:layout_width="10dp"
                android:layout_height="0dp"
                />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:track="@drawable/checkout_select"
                android:thumb="@drawable/switch_thumb"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/fish_add_text_style"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="시작 날짜를 입력해주세요." />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
        <TextView
            android:id="@+id/edit_day_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="yyyy년-mm월-dd일"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@null"
            android:textColorHint="@null"
            android:textAppearance="@style/fish_add_input_style"
            android:ems="10"
            android:background="@drawable/btn_input"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/btn_finh_add"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAppearance="@style/common_btn_text_style"
            android:background="@drawable/submit_btn"
            android:text="완료" />

    </LinearLayout>

</FrameLayout>