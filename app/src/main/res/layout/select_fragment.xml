<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:paddingTop="150dp"
    tools:context=".ui.myfish.fragment.SelectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_vector_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_title"
            android:textAppearance="@style/select_title_style"
            android:lineSpacingExtra="7sp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:gravity="center_horizontal|center_vertical"
            />

        <Button
            android:id="@+id/setting_btn_small"
            android:layout_width="300dp"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/frame_btn_text_style"
            android:textColor="@drawable/fragmnet_text_click"
            android:background="@drawable/fragement_button_change"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="소형어" />

        <Button
            android:id="@+id/setting_btn_big"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/fragement_button_change"
            android:textAppearance="@style/frame_btn_text_style"
            android:textColor="@drawable/fragmnet_text_click"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:text="중형어"
        />
    </LinearLayout>
</FrameLayout>