<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".ui.myfish.fragment.FishAddFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_ic"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/allower_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/common_title_style"
                android:fontFamily="@font/notosans_bold"
                android:includeFontPadding="false"
                android:text="필요한 준비물" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textAppearance="@style/some_id5"
            android:text="관상어를 키우는 것이 처음이라면 \n필요한 준비물에 대해서 알려드릴게요." />


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/e3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/some_id6"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosans_bold"
            android:text="어항" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/some_id8"
        android:includeFontPadding="false"
        android:textAlignment="textStart"
        android:fontFamily="@font/notosans_regular"
        android:text="관상어의 집이 될 어항은 필수겠죠?" />
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/e3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/some_id6"
            android:includeFontPadding="false"
            android:fontFamily="@font/notosans_bold"
            android:text="박테리아제" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/some_id8"
        android:includeFontPadding="false"
        android:textAlignment="textStart"
        android:fontFamily="@font/notosans_regular"
        android:text="어항 속에 빠르게 박테리아를 생성시키는 역할을 합니다." />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/e3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/some_id6"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_bold"
                android:text="여과기" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/some_id8"
            android:includeFontPadding="false"
            android:textAlignment="textStart"
            android:fontFamily="@font/notosans_regular"
            android:text="여과기는 관상어의 화장실 역할을 합니다. 초보자 추천  여과기로는 스펀지 여과기로 기포기, 에어호스가 추가로 필요합니다.
또한 걸이식 여과기는 여과재가 추가로 필요합니다" />



        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:src="@drawable/e3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/some_id6"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_bold"
                android:text="충분한 인내심" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/some_id8"
            android:includeFontPadding="false"
            android:textAlignment="textStart"
            android:fontFamily="@font/notosans_regular"
            android:text="안내에 따라 천천히 진행해 보며 함께 관상어를 잘 키워보아요🐠 " />


        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/btn_hwansu_add"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textAppearance="@style/common_btn_text_style"
            android:background="@drawable/submit_btn"
            android:text="이해 완료! 👍" />

    </LinearLayout>
</FrameLayout>